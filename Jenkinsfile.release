def tag;

elifePipeline {

    stage 'Checkout', {
        checkout scm master
    }
    
    stage 'Sandbox release', {
        elifePypiRelease('test')
    }
    
    stage 'Release', {
        tag = elifePypiRelease()
        elifeGitTagRevision(tag)
    }
    
    stage 'Downstream', {
        elifeMainlineOnly {
            build job: '/dependencies/elife-bot-elifecrossref', parameters: [string(name: 'tag', value: tag)], wait: false
        }
    }
}
